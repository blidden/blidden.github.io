<!doctype html>
<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!-- Use the title from a page's frontmatter if it has one -->
  <title>Beau Lidden • Portfolio • <%= current_page.data.title %></title>
  <!-- Adobe Fonts -->
  <link rel="stylesheet" href="https://use.typekit.net/ouu5dwu.css">
  <!-- jQuery -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <%= stylesheet_link_tag "site" %>
  <%= javascript_include_tag "site" %>
</head>

<body>
  <div class="mobileBorder"></div>
  <%= partial "partials/nav" %>
  <div class="container">
    <div class="row">
      <div class="col-9">
        <div class="blog__backLink">
          <img src="/images/back_arrow.svg" />
          <a href="/#portfolio">Back</a>
        </div>
        <div class="projectPill">Portfolio case study</div>
        <h1><%= current_page.data.project_title %></h1>
        <div class="projectIntro">
          <h4><%= current_page.data.project_intro %></h4>
        </div>
        <img src="<%= current_page.data.project_image %>" class="project_featureImage" />
      </div>
    </div>
    <div class="row projectMeta">
      <div class="col-4">
        <div class="projectMeta__heading">Date</div>
        <div class="projectMeta__info"><%= current_page.data.project_date %></div>
      </div>
      <div class="col-4">
        <div class="projectMeta__heading">Role</div>
        <div class="projectMeta__info"><%= current_page.data.project_role %></div>
      </div>
      <div class="col-4">
        <div class="projectMeta__heading">Responsibilities</div>
        <div class="projectMeta__info"><%= current_page.data.project_responsibilities %></div>
      </div>
    </div>
    <div class="row projectBody">
      <div class="col-9">
        <%= yield %>
      </div>
    </div>
  </div>
  <%= partial "partials/footer" %>
</body>

</html>
